<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:kanbarugym.ViewModels"
             xmlns:pages="clr-namespace:kanbarugym.Pages"
             x:Class="kanbarugym.Pages.RegistrarEntrenador"
             x:DataType="pages:RegistrarEntrenador"
             Title="Registrar nuevo entrenador"
             BackgroundColor="White"
             Padding="15,0">

    <Shell.TitleView>
        <Grid BackgroundColor="White">
            <VerticalStackLayout Margin="0,10,0,0">
                <Label Text="Registrar nuevo entrenador"
                       FontSize="22"
                       FontAttributes="Bold"
                       Padding="5,0,0,0"
                       TextColor="Black" />
                <Border StrokeThickness="0"
                        Margin="12,0,61,0"
                        BackgroundColor="#0595EC"
                        StrokeShape="RoundRectangle 100,100"
                        HeightRequest="5"
                        WidthRequest="285"
                        HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Margin="0,10,0,0" Spacing="10">

            <!-- Nombres y Apellidos -->
            <Label Text="Nombres y Apellidos"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Start"
                   Margin="0,10,0,-5" />
            <Border Stroke="#72C9F4"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="1"
                    Padding="10,0"
                    BackgroundColor="#fff">
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Opacity="0.1"
                            Offset="0,0"
                            Radius="5" />
                </Border.Shadow>
                <Entry x:Name="txtNombreEntrenador" Placeholder="Ingrese nombre completo" />
            </Border>

            <!-- Fecha de Nacimiento -->
            <Label Text="Fecha de Nacimiento"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Start"
                   Margin="0,0,0,-5" />
            <Border Stroke="#72C9F4"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="1"
                    Padding="10,0"
                    BackgroundColor="#fff">
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Opacity="0.1"
                            Offset="0,0"
                            Radius="5" />
                </Border.Shadow>
                <Entry x:Name="txtFechaNacimientoEntrenador" Placeholder="YYYY-MM-DD" />
            </Border>

            <!-- Sexo -->
            <Label Text="Sexo"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Start"
                   Margin="0,0,0,-5" />
            <Border Stroke="#72C9F4"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="1"
                    Padding="10,0"
                    BackgroundColor="#fff">
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Opacity="0.1"
                            Offset="0,0"
                            Radius="5" />
                </Border.Shadow>
                <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                    <!-- Picker en primera columna, con items definidos -->
                    <Picker x:Name="cmbSexoEntrenador"
                            Grid.Column="0"
                            Title="Selecciona una opción"
                            VerticalOptions="Center"
                            BackgroundColor="Transparent">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Masculino</x:String>
                                <x:String>Femenino</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <!-- Icono decorativo, no intercepta toques -->
                    <Image Grid.Column="1"
                           Source="clipborad2.png"
                           HeightRequest="40"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           Margin="5,0,5,0"
                           InputTransparent="True" />
                </Grid>
            </Border>

            <!-- Experiencia -->
            <Label Text="Experiencia (años)"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Start"
                   Margin="0,0,0,-5" />
            <Border Stroke="#72C9F4"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="1"
                    Padding="10,0"
                    BackgroundColor="#fff">
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Opacity="0.1"
                            Offset="0,0"
                            Radius="5" />
                </Border.Shadow>
                <Entry x:Name="txtExperiencia" Placeholder="Ej: 5" Keyboard="Numeric" />
            </Border>

            <!-- Especialidad -->
            <Label Text="Especialidad"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Start"
                   Margin="0,00,0,-5" />
            <Border Stroke="#72C9F4"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="1"
                    Padding="10,0"
                    BackgroundColor="#fff">
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Opacity="0.1"
                            Offset="0,0"
                            Radius="5" />
                </Border.Shadow>
                <Picker x:Name="cmbEspecialidad" Title="Selecciona una especialidad" ItemsSource="{Binding Especialidades}" />
            </Border>

            <!-- Correo electrónico -->
            <Label Text="Correo electrónico"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Start"
                   Margin="0,0,0,-5" />
            <Border Stroke="#72C9F4"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="1"
                    Padding="10,0"
                    BackgroundColor="#fff">
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Opacity="0.1"
                            Offset="0,0"
                            Radius="5" />
                </Border.Shadow>
                <Entry x:Name="txtCorreoEntrenador" Placeholder="lagunamoises64@gmail.com" Keyboard="Email" />
            </Border>

            <!-- Teléfono -->
            <Label Text="Número de teléfono"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Start"
                   Margin="0,0,0,-5" />
            <Border Stroke="#72C9F4"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="1"
                    Padding="10,0"
                    BackgroundColor="#fff">
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Opacity="0.1"
                            Offset="0,0"
                            Radius="5" />
                </Border.Shadow>
                <Entry x:Name="txtTelefonoEntrenador" Placeholder="12345678" Keyboard="Telephone" />
            </Border>

            <!-- Botones -->
            <Grid ColumnDefinitions="*,*" Padding="0,15" ColumnSpacing="10">
                <Button Grid.Column="0"
Text="Cancelar" 
BackgroundColor="#FEC2AA"
TextColor="#ffffff"
CornerRadius="10"
HeightRequest="45"
FontAttributes="Bold"
HorizontalOptions="Fill"
VerticalOptions="Center">
                    <Button.Shadow>
                        <Shadow Brush="Black"
        Opacity="0.1"
        Offset="0,0"
        Radius="5"/>
                    </Button.Shadow>
                </Button>

                <Button Grid.Column="1"
            Text="Guardar"
            BackgroundColor="#0595EC"
            TextColor="#ffffff"
            CornerRadius="10"
            HeightRequest="45"
            FontAttributes="Bold"
            HorizontalOptions="Fill"
            VerticalOptions="Center"
            Clicked="OnCreateEntrenador">

                    <Button.Shadow>
                        <Shadow Brush="Black"
        Opacity="0.1"
        Offset="0,0"
        Radius="5"/>
                    </Button.Shadow>
                </Button>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
