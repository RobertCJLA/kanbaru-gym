<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:kanbarugym.Converters"
             xmlns:viewmodels="clr-namespace:kanbarugym.ViewModels"
             x:Class="kanbarugym.Views.Clients"
             x:Name="ThisPage"
             Title="Lista de Clientes"
             BackgroundColor="White">

    <ContentPage.BindingContext>
        <viewmodels:ClientsViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:LastNameInitialConverter x:Key="LastNameInitialConverter" />
            <conv:AgeFromBirthdateConverter x:Key="AgeFromBirthdateConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Shell.TitleView>
        <Grid>
            <VerticalStackLayout Margin="0,10,15,0">
                <Label Text="Lista de clientes"
                       FontSize="22"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"/>
                <Border StrokeThickness="0"
                        BackgroundColor="#0595EC"
                        StrokeShape="RoundRectangle 100,100"
                        HeightRequest="5"
                        WidthRequest="165"
                        HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>
    </Shell.TitleView>

    <Grid Padding="20,10" RowDefinitions="Auto,*">

        <Grid Row="0" HeightRequest="45">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <Border Grid.ColumnSpan="3"
                    Stroke="#72C9F4"
                    StrokeThickness="1"
                    BackgroundColor="White">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Offset="0,0" Radius="5"/>
                </Border.Shadow>
            </Border>

            <Image Source="filter.png"
                   Grid.Column="0"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   WidthRequest="20"
                   HeightRequest="20"/>

            <Entry x:Name="searchEntry"
                   Grid.Column="1"
                   Placeholder="Buscar por nombre o apellidos"
                   BackgroundColor="Transparent"
                   VerticalOptions="Center"
                   TextColor="Black"
                   Text="{Binding SearchText, Mode=TwoWay, UpdateSourceEventName=TextChanged}"/>

            <Button Grid.Column="2"
                    ImageSource="search.png"
                    WidthRequest="50"
                    HeightRequest="50"
                    BackgroundColor="Transparent"/>
        </Grid>

        <CollectionView
            Grid.Row="1"
            x:Name="ClientesCollection"
            Margin="0,10,0,0"
            ItemsSource="{Binding Clientes}"
            SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="0,5">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>

                            <Border BackgroundColor="#0595EC"
                                    Grid.Column="0"
                                    StrokeThickness="0"
                                    StrokeShape="Ellipse"
                                    HeightRequest="40"
                                    WidthRequest="40"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start">
                                <Label Text="{Binding Nombres, Converter={StaticResource LastNameInitialConverter}}"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="14"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       HorizontalTextAlignment="Center"
                                       VerticalTextAlignment="Center"/>
                            </Border>

                            <Label Text="{Binding Nombres}"
                                   FontAttributes="Bold"
                                   Grid.Column="1"
                                   Margin="5,0"
                                   FontSize="16"
                                   VerticalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ClientsViewModel}}, Path=ToggleExpandCommand}"
                                        CommandParameter="{Binding}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Button x:Name="SettingsButton"
                                    Grid.Column="2"
                                    Padding="5"
                                    ImageSource="settings.png"
                                    WidthRequest="30"
                                    HeightRequest="30"
                                    BackgroundColor="Transparent"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ClientsViewModel}}, Path=ToggleMenuCommand}"
                                    CommandParameter="{Binding}" />

                        </Grid>

                        <Border Margin="5,0" IsVisible="{Binding IsExpanded}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout BackgroundColor="#0595EC" Padding="20,10">
                                <Label Text="{Binding CorreoElectronico}" TextColor="White" FontSize="18"/>
                                <Label Text="{Binding Telefono}" TextColor="White" FontSize="18"/>
                                <Label Text="{Binding Sexo}" TextColor="White" FontSize="18"/>
                                <Label Text="{Binding FechaNacimiento, Converter={StaticResource AgeFromBirthdateConverter}, StringFormat='Edad: {0} años'}"
                                       TextColor="White"
                                       FontSize="18"/>
                            </VerticalStackLayout>
                        </Border>

                        <Border Grid.Row="0" Grid.RowSpan="2" x:Name="MenuBorder" AutomationId="MenuBorder" HorizontalOptions="End" VerticalOptions="Start" Margin="0,0,15,0" BackgroundColor="#0595EC" Stroke="#80FFFFFF" StrokeThickness="1" Padding="10" IsVisible="{Binding IsMenuVisible}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10"/>
                            </Border.StrokeShape>
                            <Border.Triggers>
                                <MultiTrigger TargetType="Border">
                                    <MultiTrigger.Conditions>
                                        <BindingCondition Binding="{Binding IsMenuVisible}" Value="True" />
                                        <BindingCondition Binding="{Binding IsExpanded}" Value="True" />
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Shadow">
                                        <Setter.Value>
                                            <Shadow Brush="Black" Opacity="0.35" Offset="0,4" Radius="10"/>
                                        </Setter.Value>
                                    </Setter>
                                </MultiTrigger>
                            </Border.Triggers>
                            <Grid RowDefinitions="Auto,Auto, Auto" ColumnDefinitions="Auto,*" ColumnSpacing="8" RowSpacing="0">

                                <Image Source="shoppingcart.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center" Grid.Row="0" Grid.Column="0"/>
                                <Label Text="Pagar membresía" TextColor="White" FontSize="18" VerticalOptions="Center" Grid.Row="0" Grid.Column="1">
                                    <Label.GestureRecognizers></Label.GestureRecognizers>
                                </Label>

                                <Image Source="eye.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center" Grid.Row="1" Grid.Column="0"/>
                                <Button Text="Ver membresía" TextColor="White" FontSize="18" VerticalOptions="Center" Grid.Row="1" Grid.Column="1" CommandParameter="{Binding}" Clicked="OnViewMembership" BackgroundColor="Transparent" Padding="0,0,20,0"/>



                                <Image Source="edit.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center" Grid.Row="2" Grid.Column="0"/>
                                <Label Text="Editar" TextColor="White" FontSize="18" VerticalOptions="Center" Grid.Row="2" Grid.Column="1">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer  />
                                    </Label.GestureRecognizers>
                                </Label>


                            </Grid>
                        </Border>

                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid x:Name="LoadingOverlay"
              Grid.RowSpan="2"
              IsVisible="{Binding IsBusy}"
              BackgroundColor="Transparent"
              InputTransparent="False">
            <Grid VerticalOptions="Center" HorizontalOptions="Center">
                <Border BackgroundColor="#CCFFFFFF"
                        StrokeThickness="0"
                        Padding="20"
                        StrokeShape="RoundRectangle 20">
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                        <ActivityIndicator
                            IsRunning="{Binding IsBusy}"
                            Color="#0595EC"
                            WidthRequest="48"
                            HeightRequest="48"/>
                        <Label Text="Cargando..."
                               TextColor="#0595EC"
                               FontAttributes="Bold"
                               FontSize="16"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </Grid>

    </Grid>
</ContentPage>