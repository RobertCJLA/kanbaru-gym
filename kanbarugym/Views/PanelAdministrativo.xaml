<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:viewmodels="clr-namespace:kanbarugym.ViewModels"
             x:Class="kanbarugym.Views.PanelAdministrativo"  
             BackgroundColor="#fff"
             Title="Panel administrativo"
             >

    <ContentPage.BindingContext>
        <viewmodels:AdminPanelViewModel />
    </ContentPage.BindingContext>

    <Shell.TitleView>
        <Grid BackgroundColor="White">
            <VerticalStackLayout Margin="0,7,15,0">
                <Label Text="Panel administrativo"
                   FontSize="26"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   FontAttributes="Bold" 
                   TextColor="Black"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill"/>
                <Border StrokeThickness="0"
                    BackgroundColor="#0595EC"
                    StrokeShape="RoundRectangle 100,100"
                    HeightRequest="5"
                    WidthRequest="252"
                    HorizontalOptions="Center" />

            </VerticalStackLayout>
        </Grid>
    </Shell.TitleView>


    <ScrollView>
    <VerticalStackLayout
        VerticalOptions="Fill"
        Padding="15,5">   
        <Grid RowSpacing="10" ColumnSpacing="10" Margin="0,20,0,0">  

            <Grid.ColumnDefinitions>  
                <ColumnDefinition Width="*" />  
                <ColumnDefinition Width="*" />  
            </Grid.ColumnDefinitions>  

            <Grid.RowDefinitions>  
                <RowDefinition Height="140" />  
                <RowDefinition Height="140" />  
            </Grid.RowDefinitions>  

            <!-- Card1: Nuevo cliente -->
            <Border Grid.Column="0"  
                   StrokeShape="RoundRectangle 10"  
                   BackgroundColor="#2196F3"  
                   Padding="15">  
                <StackLayout>  
                    <Label Text="{Binding NuevoCliente.Title}" FontSize="16" TextColor="White" FontAttributes="Bold"/>  
                    <Label Text="{Binding NuevoCliente.Tag}" TextColor="White" FontSize="10"/>  
                    <Label Text="{Binding NuevoCliente.DateText}" TextColor="White" FontSize="10"/>  
                    <Label Text="{Binding NuevoCliente.Name}" TextColor="White" FontSize="14" Margin="0,15" FontAttributes="Bold"/>  
                </StackLayout>  
            </Border>  

            <!-- Card2: Cliente fiel -->
            <Border Grid.Column="1"  
                   StrokeShape="RoundRectangle 10"  
                   BackgroundColor="#2196F3"  
                   Padding="15">  
                <StackLayout>  
                    <Label Text="{Binding ClienteFiel.Title}" FontSize="16" TextColor="White" FontAttributes="Bold"/>  
                    <Label Text="{Binding ClienteFiel.Tag}" TextColor="White" FontSize="10"/>  
                    <Label Text="{Binding ClienteFiel.DateText}" TextColor="White" FontSize="10"/>  
                    <Label Text="{Binding ClienteFiel.Name}" TextColor="White" FontSize="14" Margin="0,15" FontAttributes="Bold"/>  
                </StackLayout>  
            </Border>  

            <!-- Card3: Termina pronto -->
            <Border Grid.Row="1" Grid.Column="0"  
                   StrokeShape="RoundRectangle 10"  
                   BackgroundColor="#2196F3"  
                   Padding="15"  
                   >  
                <StackLayout>  
                    <Label Text="{Binding TerminaPronto.Title}" FontSize="16" TextColor="White" FontAttributes="Bold"/>  
                    <Label Text="{Binding TerminaPronto.Tag}" TextColor="White" FontSize="10"/>  
                    <Label Text="{Binding TerminaPronto.DateText}" TextColor="White" FontSize="10"/>  
                    <Label Text="{Binding TerminaPronto.Name}" TextColor="White" FontSize="14" Margin="0,15" FontAttributes="Bold"/>  
                </StackLayout>  
            </Border>  

            <!-- Card4: Terminada -->
            <Border Grid.Row="1" Grid.Column="1"  
                   StrokeShape="RoundRectangle 10"  
                   BackgroundColor="#2196F3"  
                   Padding="15">  
                <StackLayout>  
                    <Label Text="{Binding Terminada.Title}" FontSize="16" TextColor="White" FontAttributes="Bold"/>  
                    <Label Text="{Binding Terminada.Tag}" TextColor="White" FontSize="10"/>  
                    <Label Text="{Binding Terminada.DateText}" TextColor="White" FontSize="10"/>  
                    <Label Text="{Binding Terminada.Name}" TextColor="White" FontSize="14" Margin="0,15" FontAttributes="Bold"/>  
                </StackLayout>  
            </Border>  
        </Grid>  


        <Border Stroke="#2196F3"  
                StrokeThickness="0"  
                Background="#2196F3"  
                Margin="0,10"
                Padding="10"  
                StrokeShape="RoundRectangle 15">  
            <Grid ColumnDefinitions="Auto, *"  
                  VerticalOptions="Center"  
                  HorizontalOptions="Fill">  
                <Border WidthRequest="50"  
                        HeightRequest="50"  
                        Background="#42A5F5"  
                        StrokeThickness="0"  
                        StrokeShape="Ellipse"  
                        VerticalOptions="Center"  
                        HorizontalOptions="Center">  
                    <Image Source="portapapeles.png"  
                           WidthRequest="24"  
                           HeightRequest="24"  
                           HorizontalOptions="Center"  
                           VerticalOptions="Center" />  
                </Border>  
                <VerticalStackLayout Grid.Column="1"  
                                     VerticalOptions="Center"  
                                     Spacing="2"  
                                     Margin="10,0,0,0">  
                    <Label Text="Registrar cliente"  
                           FontSize="14"  
                           TextColor="White"  
                           FontAttributes="Bold"/>  
                    <Label Text="Registrar nuevo cliente"  
                           FontSize="10"  
                           TextColor="White"/>  
                </VerticalStackLayout>  

            </Grid>  
            <Border.GestureRecognizers>  
                <TapGestureRecognizer Tapped="OnRegisterClient"/>  
            </Border.GestureRecognizers>  
        </Border>  

        <Border Stroke="#2196F3"  
         StrokeThickness="0"  
         Background="#2196F3"  
         Padding="10"  
         StrokeShape="RoundRectangle 15">  
            <Grid ColumnDefinitions="Auto, *"  
           VerticalOptions="Center"  
           HorizontalOptions="Fill">    
                <Border WidthRequest="50"  
                 HeightRequest="50"  
                 Background="#42A5F5"
                 StrokeThickness="0"  
                 StrokeShape="Ellipse"
                 VerticalOptions="Center"  
                 HorizontalOptions="Center">  
                    <Image Source="portapapeles.png"  
                    WidthRequest="24"  
                    HeightRequest="24"  
                    HorizontalOptions="Center"  
                    VerticalOptions="Center" />  
                </Border>  
                <VerticalStackLayout Grid.Column="1"  
                              VerticalOptions="Center"  
                              Spacing="2"  
                              Margin="10,0,0,0">  
                    <Label Text="Registrar entrenador"  
                    FontSize="14"  
                    TextColor="White"  
                    FontAttributes="Bold"/>  
                    <Label Text="Registrar nuevo entrenador"  
                    FontSize="10"  
                    TextColor="White"/>  
                </VerticalStackLayout>  

            </Grid>  
            <Border.GestureRecognizers>  
                <TapGestureRecognizer Tapped="OnRegisterCouch"/>  
            </Border.GestureRecognizers>  
        </Border>  
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>