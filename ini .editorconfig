# .editorconfig para kanbarugym — establece reglas de formato y estilo C#
root = true

[*.{cs}]
charset = utf-8-bom
indent_style = space
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Orden y separación de using
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

# Llaves: nueva línea antes de la llave de apertura en la mayoría de los casos
csharp_new_line_before_open_brace_for_types = true
csharp_new_line_before_open_brace_for_methods = true
csharp_new_line_before_open_brace_for_properties = true
csharp_new_line_before_open_brace_for_accessors = true
csharp_new_line_before_open_brace_for_anonymous_methods = true
csharp_new_line_before_open_brace_for_control_blocks = true
csharp_new_line_before_open_brace_for_anonymous_types = false
csharp_new_line_before_open_brace_for_object_collection_array_initializers = false
csharp_new_line_before_open_brace_for_lambda_expression_body = false

# Espaciado
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_call_parameter_list_parentheses = false
csharp_space_after_cast = false

# Sangrías y switch/case
csharp_indent_block_contents = true
csharp_indent_braces = false
csharp_indent_case_contents = true
csharp_indent_switch_labels = true

# Preferencias de var
csharp_style_var_for_built_in_types = false:suggestion
csharp_style_var_when_type_is_apparent = false:suggestion
csharp_style_var_elsewhere = false:suggestion

# Expression-bodied members: prefer explícito (mejor legibilidad para este proyecto)
dotnet_style_prefer_expression_bodied_methods = false:suggestion
dotnet_style_prefer_expression_bodied_properties = false:suggestion
dotnet_style_prefer_expression_bodied_ctors = false:suggestion
dotnet_style_prefer_expression_bodied_indexers = false:suggestion
dotnet_style_prefer_expression_bodied_accessors = false:suggestion

# Declaración de namespaces: mantener el estilo con llaves (block-scoped)
csharp_style_namespace_declarations = block_scoped:warning

# Severidad y sugerencias generales
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion